<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        style="@style/SongCard">

        <ImageView
            android:id="@+id/album_view_art"
            android:layout_width="180dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/miniplayer_default_album_art"/>

        <TextView
            android:id="@+id/album_view_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SongCardFont"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:text="Album"
            app:layout_constraintStart_toEndOf="@+id/album_view_art"
            app:layout_constraintTop_toTopOf="@id/album_view_art" />

        <TextView
            android:id="@+id/album_view_artist"
            style="@style/SongCardFontSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Artist"
            app:layout_constraintStart_toStartOf="@+id/album_view_song_title"
            app:layout_constraintTop_toBottomOf="@id/album_view_song_title" />

        <TextView
            android:id="@+id/album_view_song_count"
            style="@style/SongCardFontSmall"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:text="amount"
            app:layout_constraintStart_toStartOf="@+id/album_view_song_title"
            app:layout_constraintTop_toBottomOf="@+id/album_view_artist" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>